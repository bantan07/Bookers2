<% if flash[:notice] %>
    <p id="notice">
      <%= flash[:notice] %>
    </p>
<% end %>
<div class="container">  
 <div class="row">  
  <div class="col-lg-4">
  <%= render 'users/user',user:current_user %>
  <%= render 'books/new',book:@new_book %>
  </div> 
  
  
  <div class="col-lg-8">
  <h2>Book detail</h2>
   <table class="table table-striped">
    <tr>
     <td><%= attachment_image_tag @user, :image, :fill, 50, 50,  fallback: "no_image.jpg" %></td>
     <td><%= link_to @book.title,  book_path %></td>
     <td><%= @book.body %></td>
     <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
     <td><%= link_to "Destroy", book_path(@book.id),method: :delete, data: { confirm: "本当に消しますか？?" } %></td>
    </tr>
   </table>
  </div>
 </div>
</div>