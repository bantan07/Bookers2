<% if flash[:notice] %>
    <p id="notice">
      <%= flash[:notice] %>
    </p>
<% end %>
<div class="container">  
 <div class="row">  
  <div class="col-lg-4">
  <%= render 'users/user',user:@users %>
  <%= render 'books/new',book:@new_book %>
  </div> 
  
  
  <div class="col-lg-8">
  <h2>Book detail</h2>
   <table class="table table-striped">
    <tr>
     <td><%= link_to user_path(@book.user_id) do %>
         <%= attachment_image_tag @users, :image, :fill, 50, 50,  fallback: "no_image.jpg" %></br>
         <% end %>
       <%= link_to @book.user.name, user_path(@book.user_id)%></td>
     <td><%= @book.body %></td>
     <% if @book.user_id == current_user.id %>
     <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
     <td><%= link_to "Destroy", book_path(@book.id),method: :delete, data: { confirm: "本当に消しますか？?" } %></td>
     <% end %>
    </tr>
   </table>
  </div>
 </div>
</div>