<% if flash[:notice] %>
    <p id="notice">
      <%= flash[:notice] %>
    </p>
<% end %>
<div class="container">  
 <div class="row">  
  <div class="col-lg-4">
  <%= render'users/user',user:@user %>
  <%= render'books/new',book:@book %>
  </div> 
  
  
  <div class="col-lg-8">
  <h2>Book detail</h2>
   <table class="table table-striped">
    <tr>
     <tb><%= @book.title %></tb>
     <td><%= link_to '#title', book_path(@book.id) %></td>
     <tb><%= @book.body %></tb>
     <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
     <td><%= button_to "Destroy", book_path(@book.id),method: :delete, data: { confirm: "本当に消しますか？?" } %></td>
    </tr>
   </table>
  </div>
 </div>
</div>