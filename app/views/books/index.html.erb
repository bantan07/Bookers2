
<div class="container">  
 <div class="row">  
 <div class="col-lg-4">
 <%= render 'users/user',user:current_user %>
 <%= render 'books/new',book:@book %>
 </div>
 
 
 <div class="col-lg-8">
  <h2>Books</h2>
 <table class="table table-striped">
  <thead>
    <tr>
     <th>Title</th>
     <th>Opinion</th>
    </tr>
   </thead>
   <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= link_to user_path(book.user_id) do %>
         <%= attachment_image_tag @users, :image, :fill, 50, 50,  fallback: "no_image.jpg" %></td>
         <% end %>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
     </tr>
    <% end %>
   </tbody>
  </table>

 
   