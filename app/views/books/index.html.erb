<h1>Bookers</h1>
<div class="container">  
 <div class="row">  
 <div class="col-lg-4">
 <%= render'users/user',user:@user %>
 <%= render'books/new',book:@book %>
 </div>
 
 <h1>Books</h1>
 <div class="col-lg-8">
 <table class="table table-striped">
 <table>
   <thead>
    <tr>
     <th>Title</th>
     <th>Opinion</th>
    </tr>
   </thead>
   <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.user_id %></td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to users_path(user.id) %></td>
      <td><%= link_to  book_path(book.id) %></td>
     </tr>
    <% end %>
   </tbody>
  </table>

 
   