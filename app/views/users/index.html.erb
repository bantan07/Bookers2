
<div class="container">  
 <div class="row">  
  <div class="col-lg-4">
   <%= render 'users/user',user:current_user %>
   <%= render 'books/new',book:@book %>
  </div>
  <div class="col-lg-8">
   <h2>Users</h2>
   <table class="table table-striped">
    <thead>
     <tr>
      <th>imege</th>
      <th>name</th>
     </tr>
    </thead>
    <tbody>
     <% @users.each do |user| %>
     <tr>
       <td><%= attachment_image_tag user, :image, :fill, 50, 50,  fallback: "no_image.jpg" %></td>
       <td><%= user.name %></td>
       <td><%= link_to "Show", user_path(user.id) %></td>
     </tr>
     <% end %>
     </tbody>
   </table>
  </div>
 </div>
</div>
 

